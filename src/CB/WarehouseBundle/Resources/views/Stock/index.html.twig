{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Stock list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Basequantity</th>
                <th>Lot</th>
                <th>Sn</th>
                <th>Expirydate</th>
                <th>Bestbeforedate</th>
                <th>Reciveddate</th>
                <th>Productiondate</th>
                <th>Createddate</th>
                <th>Updateddate</th>
                <th>Objectid</th>
                <th>Objecttype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('stock_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.baseQuantity }}</td>
                <td>{{ entity.lot }}</td>
                <td>{{ entity.sn }}</td>
                <td>{% if entity.expiryDate %}{{ entity.expiryDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.bestBeforeDate %}{{ entity.bestBeforeDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.recivedDate %}{{ entity.recivedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.productionDate %}{{ entity.productionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdDate %}{{ entity.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedDate %}{{ entity.updatedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.objectId }}</td>
                <td>{{ entity.objectType }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('stock_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('stock_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('stock_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
