<h1>Warehouse stock list</h1>
<p><a href="{{ path('stock_new') }}"><b>Add stock</b></a></p>
<table class="records_list">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Container</th>
            <th>Location</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity['product_name'] }}</td>
            <td>{{ entity['quantity'] }}</td>
            <td>{{ entity['container_code'] }}</td>
            <td>{% if entity['location_code'] %} 
                    {{ entity['location_code'] }} 
                {% else %}
                    {% if entity['container_location_code'] %} {{ entity['container_location_code'] }} {% endif %}
                {% endif %}</td>
            <td><a href="{{ path('stock_edit_qtty', { 'id': entity['id'] }) }}"><b>Inc/Dec</b></a></td>
            <td><a href="{{ path('stock_edit', { 'id': entity['id'] }) }}"><b>Modify</b></a></td>
            <td><a href="{{ path('stock_move', { 'id': entity['id'] }) }}"><b>Move</b></a></td>
            <td><a href="{{ path('stock_delete', { 'id': entity['id'] }) }}"><b>Delete</b></a></td>
            <td><a href="{{ path('stock_split', { 'id': entity['id'] }) }}"><b>Split</b></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

